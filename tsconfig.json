{
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "react-jsx",
    "lib": ["ES2015", "DOM"],
    "paths": {
      "@/*": ["src/*"],
      "@shared/*": ["src/shared/*"],
      "@entities/*": ["src/entities/*"],
      "@features/*": ["src/features/*"],
      "@app/*": ["src/app/*"],
      "@config/*": ["src/config/*"],
      "@hooks/*": ["src/hooks/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}